<div class='page'>
  <div class='wrapper'>
    <% @books.each do |book| %>
      <div class='card'>
        <img class='card__img' src='<%=book.img%>' alt='<%= "#{@books.first.title}" %>-img' />
        <p class='card__title'><%= book.title %></p>
        <p class='card__author'><%= book.author %></p>
        <% if logged_in? %>
          <button class="card__btn">ADD</button>
        <% end %>
      </div>
    <% end %>
  </div>
</div>