<div class="container">
  <div class='form-wrapper'>
    <%= form_tag(sessions_path) do %>
      <label>Enter username:</label><br>
      <%= text_field_tag :'username', nil, autofocus: true, required: true %><br>

      <label>Enter password:</label><br>
      <%= text_field_tag :'password', nil, required: true %><br>
    
      <%= submit_tag "Log In", class: 'submit-btn' %>
    <% end %>
    <%= render 'shared/showErrors' %>
  </div>
  <%= link_to "Sign in with Github", '/auth/github' %>
</div>